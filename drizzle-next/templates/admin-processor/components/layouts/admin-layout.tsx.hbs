"use client";

import {
  DashboardContent,
  DashboardHeader,
  DashboardLayout,
  DashboardNav,
  DashboardSidebar,
  DashboardSidebarGroup,
  DashboardSidebarItem,
  DashboardTitle,
} from "@/components/ui/dashboard-layout";
import {
  User2Icon,
  GaugeIcon,
  LogOutIcon,
  SettingsIcon,
  Table2Icon,
} from "lucide-react";
import { Avatar } from "@/components/ui/avatar";
import { User } from "@/schema/users";
import Link from "next/link";
import { usePathname } from "next/navigation";

const items = [
  { text: "Admin", link: "/admin", icon: GaugeIcon },
  { text: "Settings", link: "/admin/settings", icon: SettingsIcon },
  { text: "Sign out", link: "/signout", icon: LogOutIcon },
];

export function AdminLayout({
  userObj,
  children,
}: {
  userObj: User;
  children: React.ReactNode;
}) {
  const pathname = usePathname();

  return (
    <DashboardLayout>
      <DashboardHeader>
        <DashboardTitle>Drizzle Next</DashboardTitle>
        <DashboardNav>
          <Avatar src={userObj.image}>
            <User2Icon />
          </Avatar>
        </DashboardNav>
      </DashboardHeader>
      <DashboardSidebar>
        <DashboardSidebarGroup>
          {items.map((item) => (
            <Link key={item.text} href={item.link}>
              <DashboardSidebarItem active={pathname === item.link}>
                <item.icon size={16} /> {item.text}
              </DashboardSidebarItem>
            </Link>
          ))}
        </DashboardSidebarGroup>
      </DashboardSidebar>
      <DashboardContent>{children}</DashboardContent>
    </DashboardLayout>
  );
}
