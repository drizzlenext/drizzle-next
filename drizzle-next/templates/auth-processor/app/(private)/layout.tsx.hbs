import { eq } from "drizzle-orm";
import { redirect } from "next/navigation";
import { db } from "@/lib/db";
import { {{userObj.pluralCamelCase}} } from "@/schema/{{userObj.pluralKebabCase}}";
import { PrivateLayout } from "@/components/layouts/private-layout";
import { authorize } from "@/services/auth/auth-service";

export default async function Layout({
  children,
}: {
  children: React.ReactNode;
}) {
  const session = await authorize("user");

  const userRow = await db.query.{{userObj.pluralCamelCase}}.findFirst({
    where: eq({{userObj.pluralCamelCase}}.id, session.user.id),
  });

  if (!userRow) {
    redirect("/signin");
  }

  return (
    <PrivateLayout userRow={userRow} >
      {children}
    </PrivateLayout>
  );
}

export const dynamic = "force-dynamic";
