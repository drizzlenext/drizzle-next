  });

  if (!validatedFields.success) {
    return {
      errors: validatedFields.error.flatten().fieldErrors,
      message: "Invalid data",
    };
  }

  try {
    await db.insert({{tableObj.pluralCamelCase}}).values(validatedFields.data);
  } catch (error) {
    console.error(error);
    return {
