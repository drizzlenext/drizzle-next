{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "../common/types/types.ts",
    "../common/lib/case-utils.ts",
    "../common/lib/log.ts",
    "../common/lib/utils.ts",
    "../common/lib/handlebars-helpers.ts",
    "../common/lib/strategy-factory.ts",
    "../common/lib/pk-strategy.ts",
    "../common/processors/db-dialect-processor.ts"
  ],
  "exclude": ["node_modules", "dist", "../common/test"]
}
